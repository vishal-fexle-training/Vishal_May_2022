<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>false</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Roll_Number__c</field>
        <field>Name</field>
        <field>Class__c</field>
        <field>Owner</field>
        <field>Overall_Percentage__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Student_Approvers</name>
                <type>queue</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Assigning approvers</label>
        <name>Assigning_approvers</name>
    </approvalStep>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Student__c.Student_Approval__c</field>
            <operation>notEqual</operation>
            <value>Pending Approval,Approved</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Request_Approved</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Stage_Completed</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Student_Approval_Approved</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Request_Rejected</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Stage_In_Set_up</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Student_Approval_Rejected</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Send_Email_to_Approvers</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Stage_In_progress</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Update_Student_Approval_Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Student Approval Process</label>
    <processOrder>1</processOrder>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
